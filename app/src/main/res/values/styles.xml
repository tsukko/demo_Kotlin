<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- アクションバーの背景色 -->
        <item name="colorPrimary">@color/colorMenuBackground</item>
        <!-- ステータスバーの背景色、ナビゲーションの背景色は設定なし （デフォルト）-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="android:navigationBarColor">#000000</item>-->
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!--スプラッシュ画面、マイページ（トップ）画面-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <!--コントロールの基本色、ダイアログのボタンの文字など-->
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!--オプションメニューの設定-->
    <style name="ToolbarOptionMenuPopupTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/colorMenu</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!--switchのcolor設定-->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorSwitchSelected</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
        <item name="android:colorForeground">@android:color/black</item>
    </style>

    <!--spinnerの定義、ここから-->
    <style name="RelationshipsSpinner" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:spinnerStyle">@style/MySpinnerAppTheme</item>
        <!--<item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>-->
    </style>

    <style name="MySpinnerAppTheme" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorTextBase</item>
    </style>

