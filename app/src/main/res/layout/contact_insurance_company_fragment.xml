<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="isLoading"
            type="boolean" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_large"
                android:text="@string/msg_contact_company"
                android:textColor="@color/colorTextBase" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_middle">

                    <TextView
                        android:id="@+id/contactCompanyTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/darker_gray"
                        android:padding="@dimen/margin_middle"
                        android:text="@string/title_contact"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/contactCompanyTextView"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_middle"
                        android:text="@string/text_insurance_company"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/contactCompanyTitleTextView" />

                    <TextView
                        android:id="@+id/contactCompanyTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_large"
                        android:padding="@dimen/margin_middle"
                        android:text="XXXサービス"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintStart_toEndOf="@+id/contactCompanyTextView"
                        app:layout_constraintTop_toBottomOf="@+id/contactCompanyTitleTextView" />

                    <View
                        android:id="@+id/lineView"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/contactCompanyTextView1" />

                    <TextView
                        android:id="@+id/contactCompanyTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_middle"
                        android:text="@string/text_destination"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lineView" />

                    <TextView
                        android:id="@+id/contactCompanyTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_middle"
                        android:text="お客様デスク"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintStart_toStartOf="@+id/contactCompanyTextView1"
                        app:layout_constraintTop_toBottomOf="@+id/lineView" />

                    <View
                        android:id="@+id/lineView1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/contactCompanyTextView2" />

                    <TextView
                        android:id="@+id/contactCompanyTextView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_middle"
                        android:text="@string/text_call"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lineView1" />

                    <TextView
                        android:id="@+id/contactCompanyTextView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_middle"
                        android:text="000-1234-1234"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintStart_toStartOf="@+id/contactCompanyTextView1"
                        app:layout_constraintTop_toBottomOf="@+id/lineView1" />

                    <View
                        android:id="@+id/lineView2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/contactCompanyTextView5" />

                    <TextView
                        android:id="@+id/contactCompanyTextView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_middle"
                        android:text="@string/text_mail"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lineView2" />

                    <TextView
                        android:id="@+id/contactCompanyTextView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_middle"
                        android:text="xxxx@xxx.xxxx.co.jp"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintStart_toStartOf="@+id/contactCompanyTextView1"
                        app:layout_constraintTop_toBottomOf="@+id/lineView2" />

                    <View
                        android:id="@+id/lineView3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@+id/contactCompanyTextView6" />

                    <ImageView
                        android:id="@+id/telStaffImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_middle"
                        android:contentDescription="@string/text_none"
                        android:padding="@dimen/margin_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lineView3"
                        app:srcCompat="@drawable/button_phone" />

                    <TextView
                        android:id="@+id/telTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_tel_staff"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintEnd_toEndOf="@+id/telStaffImageView"
                        app:layout_constraintStart_toStartOf="@+id/telStaffImageView"
                        app:layout_constraintTop_toBottomOf="@+id/telStaffImageView" />

                    <ImageView
                        android:id="@+id/mailStaffImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_middle"
                        android:contentDescription="@string/text_none"
                        android:padding="@dimen/margin_small"
                        app:layout_constraintEnd_toStartOf="@+id/openSiteImageView"
                        app:layout_constraintStart_toEndOf="@+id/telStaffImageView"
                        app:layout_constraintTop_toBottomOf="@+id/lineView3"
                        app:srcCompat="@drawable/button_mail" />

                    <TextView
                        android:id="@+id/mailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_mail_staff"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintEnd_toEndOf="@+id/mailStaffImageView"
                        app:layout_constraintStart_toStartOf="@+id/mailStaffImageView"
                        app:layout_constraintTop_toBottomOf="@+id/mailStaffImageView" />

                    <ImageView
                        android:id="@+id/openSiteImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_middle"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:contentDescription="@string/text_none"
                        android:padding="@dimen/margin_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lineView3"
                        app:srcCompat="@drawable/button_www" />

                    <TextView
                        android:id="@+id/siteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_open_site"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintEnd_toEndOf="@+id/openSiteImageView"
                        app:layout_constraintStart_toStartOf="@+id/openSiteImageView"
                        app:layout_constraintTop_toBottomOf="@+id/openSiteImageView" />

                    <ImageView
                        android:id="@+id/openAppImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_middle"
                        android:contentDescription="@string/text_none"
                        android:padding="@dimen/margin_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mailTextView"
                        app:srcCompat="@drawable/button_app" />

                    <TextView
                        android:id="@+id/appTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_start_app"
                        android:textColor="@color/colorTextBase"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/openAppImageView"
                        app:layout_constraintStart_toStartOf="@+id/openAppImageView"
                        app:layout_constraintTop_toBottomOf="@+id/openAppImageView" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</layout>
